# CascadingTrust Backend Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# JWT Secret Key - MUST be set in production!
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Set to "true" in production to enable:
# - Secure cookies (HTTPS only)
# - Stricter security settings
PRODUCTION=false

# Domain for CORS (comma-separated for multiple domains)
# Example: cascadingtrust.net,www.cascadingtrust.net
ALLOWED_DOMAINS=

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# JWT token expiration in days (default: 7)
JWT_EXPIRATION_DAYS=7

# Base URL for invite links (used in generate-invite response)
# Example: https://cascadingtrust.net
BASE_URL=
